<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/authorization_field_width"
    android:layout_height="wrap_content"
    tools:context=".SignupFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/authorization_field_margin">

        <EditText
            android:id="@+id/editTextEmailAuthorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_margin="@dimen/authorization_field_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="@dimen/authorization_field_margin">
            <EditText
                android:id="@+id/editTextConfirmEmailAuthorization"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <EditText
            android:id="@+id/editTextPasswordAuthorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_margin="@dimen/authorization_field_margin"/>

        <EditText
            android:id="@+id/editTextConfirmPasswordAuthorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_margin="@dimen/authorization_field_margin"/>


        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:background="@drawable/button"/>

        <TextView
            android:id="@+id/textBackSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/back_link"
            android:textColor="@color/link"
            android:layout_margin="@dimen/authorization_field_margin" />


    </LinearLayout>

</FrameLayout>