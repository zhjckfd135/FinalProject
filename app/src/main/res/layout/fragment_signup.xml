<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/authorization_field_width"
    android:layout_height="wrap_content"
    tools:context=".SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/authorization_field_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextFirstNameSignup"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/authorization_field_margin"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:padding="@dimen/edit_text_padding"
                android:textColorHint="@color/edit_text_hint"
                android:hint="First name..."
                android:textColor="@color/edit_text_text"/>

            <EditText
                android:id="@+id/editTextLastNameSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/edit_text"
                android:padding="@dimen/edit_text_padding"
                android:layout_margin="@dimen/authorization_field_margin"
                android:textColorHint="@color/edit_text_hint"
                android:hint="Last name..."
                android:textColor="@color/edit_text_text"
                />
        </LinearLayout>



        <EditText
            android:id="@+id/editTextEmailSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_text"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:layout_margin="@dimen/authorization_field_margin"
            android:textColorHint="@color/edit_text_hint"
            android:hint="Email name..."
            android:textColor="@color/edit_text_text"
            />


        <EditText
            android:id="@+id/editTextPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="@dimen/edit_text_padding"
            android:background="@drawable/edit_text"
            android:layout_margin="@dimen/authorization_field_margin"
            android:textColorHint="@color/edit_text_hint"
            android:hint="Password..."
            android:textColor="@color/edit_text_text"/>

        <EditText
            android:id="@+id/editTextConfirmPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/edit_text"
            android:padding="@dimen/edit_text_padding"
            android:layout_margin="@dimen/authorization_field_margin"
            android:textColorHint="@color/edit_text_hint"
            android:hint="Confirm password..."
            android:textColor="@color/edit_text_text"/>

        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:backgroundTint="@color/button"
            />

        <TextView
            android:id="@+id/textBackSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/back_link"
            android:textColor="@color/link"
            android:layout_margin="@dimen/authorization_field_margin" />


    </LinearLayout>

</FrameLayout>